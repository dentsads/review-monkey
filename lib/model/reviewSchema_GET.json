{
  "id": "/Review",
  "type": "object",
  "properties": {
    "author": {"$ref": "#/definitions/idReferences"},
    "reviewers": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/reviewerReferences" },
      "uniqueItems": true
    },
    "globalComments": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/idReferences" },
      "uniqueItems": true
    },
    "subscribers": {
      "type": "array",
      "minItems": 0,
      "items": { "$ref": "#/definitions/idReferences" },
      "uniqueItems": true
    },
    "changes": {
      "type": "array",
      "minItems": 1,
      "items": { "$ref": "#/definitions/changeReferences" },
      "uniqueItems": true
    },
    "description": {
      "type": "string",
      "minLength":1
    },
    "repository": {
      "format": "uri",
      "type": "string"
    },
    "priority": {
      "enum": [ "low", "medium", "high" ]
    },
    "modificationDate":"2015-05-05-T050302",
    "creationDate":"2015-05-05-T050302"
  },
  "additionalProperties": false,
  "required": ["author", "description", "changes"],

  "definitions": {
     "idReferences": {
        "type": "object",
        "properties": {
          "refId": {
            "format": "uri",
            "type": "string"
          }
        },
        "additionalProperties": false,
        "required": ["refId"]
      },
      "reviewerReferences": {
         "type": "object",
         "properties": {
           "reviewStatus": {
             "enum": [ "open", "rejected", "accepted" ]
           },
           "refId": {
             "format": "uri",
             "type": "string"
           }
         },
         "additionalProperties": false,
         "required": ["refId", "reviewStatus"]
       },
      "changeReferences": {
         "type": "object",
         "properties": {
           "id": {
             "type": "string",
             "minLength":1
           },
           "udiff": {
            "description": "Base64 UTF-8 encoded unified diff string",
            "type": "string",
            "pattern": "^([A-Za-z0-9+/]{4})*([A-Za-z0-9+/]{4}|[A-Za-z0-9+/]{3}=|[A-Za-z0-9+/]{2}==)$"
          },
           "comments": {
             "type": "array",
             "minItems": 0,
             "items": { "$ref": "#/definitions/commentReferences" },
             "uniqueItems": true
           }
         },
         "additionalProperties": false,
         "required": ["udiff", "id"]
       },
       "commentReferences": {
          "type": "object",
          "properties": {
            "line": {
              "type": "integer",
              "minimum": 1
            },
            "refId": {
              "format": "uri",
              "type": "string"
            }
          },
          "additionalProperties": false,
          "required": ["refId", "line"]
        }
  }
}
